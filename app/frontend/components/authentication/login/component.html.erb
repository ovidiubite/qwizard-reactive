<%= render(PageNarrow::Component.new) do %>
  <%= render(Authentication::Header::Component.new('Welcome, fellow qwizard! <br />A magical world of quizzes awaits you.')) %>

  <div style="width: 100%">
    <%= form_with scope: :user, url: sessions_path do |form| %>
      <%= render(TextInput::Component.new(form: form, field_name: 'code', label_text: 'Join with a spell code', placeholder: 'AD23IW@2')) %>

      <div class=<%= class_for "inputDivider"%>>
        <%= render(Divider::Component.new) %>
      </div>

      <%= render(TextInput::Component.new(form: form, field_name: 'username', label_text: 'Qwizard name', placeholder: 'John')) %>
      <%= render(PasswordInput::Component.new(form: form, field_name: 'password', label_text: 'Qwizard Secret Password', placeholder: '*********')) %>

      <div class=<%= class_for "buttonContainer"%>>
        <%= render(Button::Component.new('ENTER', background_color: 'purple')) %>

        <div class=<%= class_for "buttonDivider"%>>
          <%= render(Divider::Component.new) %>
        </div>

        <div class=<%= class_for "signUpButton"%>>
          <%= link_to new_registration_path do %>
            <%= render(Button::Component.new('Sign up')) %>
          <% end %>
        </div>
        <%= link_to new_password_path do %>
          <%= render(Button::Component.new('Recover password')) %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
